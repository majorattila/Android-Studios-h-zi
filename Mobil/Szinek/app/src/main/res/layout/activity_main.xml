<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.diak.szinek.MainActivity">

    <Button
        android:text="Piros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_piros"
        android:layout_below="@+id/button_kek"
        android:layout_alignLeft="@+id/button_kek"
        android:layout_alignStart="@+id/button_kek"
        android:layout_marginTop="39dp"
        android:background="@android:color/holo_red_dark" />

    <Button
        android:text="Sárga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_sarga"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_alignBaseline="@+id/button_kek"
        android:layout_alignBottom="@+id/button_kek"
        android:layout_toRightOf="@+id/button_kek"
        android:layout_toEndOf="@+id/button_kek"
        android:background="@android:color/holo_orange_light" />

    <Button
        android:text="Zöld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_zold"
        android:layout_alignBaseline="@+id/button_piros"
        android:layout_alignBottom="@+id/button_piros"
        android:layout_alignLeft="@+id/button_sarga"
        android:layout_alignStart="@+id/button_sarga"
        android:background="@android:color/holo_green_light" />

    <Button
        android:text="Kék"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:id="@+id/button_kek"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_blue_bright" />

</RelativeLayout>
