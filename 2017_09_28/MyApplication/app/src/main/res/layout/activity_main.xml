<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.diak.szamologep.MainActivity">

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_egy"
        android:layout_toRightOf="@+id/button_egy"
        android:layout_toEndOf="@+id/button_egy"
        android:id="@+id/button_ketto" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_ketto"
        android:layout_toRightOf="@+id/button_ketto"
        android:layout_toEndOf="@+id/button_ketto"
        android:id="@+id/button_harom" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_egy"
        android:layout_alignLeft="@+id/button_egy"
        android:layout_alignStart="@+id/button_egy"
        android:id="@+id/button_negy" />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_harom"
        android:layout_toRightOf="@+id/button_ot"
        android:layout_toEndOf="@+id/button_ot"
        android:id="@+id/button_hat" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="46dp"
        android:id="@+id/button_egy"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_negy"
        android:layout_alignLeft="@+id/button_negy"
        android:layout_alignStart="@+id/button_negy"
        android:id="@+id/button_het" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_ot"
        android:layout_toRightOf="@+id/button_het"
        android:layout_toEndOf="@+id/button_het"
        android:id="@+id/button_nyolc" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_hat"
        android:layout_toRightOf="@+id/button_nyolc"
        android:layout_toEndOf="@+id/button_nyolc"
        android:id="@+id/button_kilenc" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_nyolc"
        android:layout_toRightOf="@+id/button_het"
        android:layout_toEndOf="@+id/button_het"
        android:id="@+id/button_nulla" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_nulla"
        android:layout_alignLeft="@+id/button_nulla"
        android:layout_alignStart="@+id/button_nulla"
        android:layout_marginTop="40dp"
        android:id="@+id/button_kivonas" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_kivonas"
        android:layout_toLeftOf="@+id/button_kivonas"
        android:layout_toStartOf="@+id/button_kivonas"
        android:id="@+id/button_osszeadas" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_kivonas"
        android:layout_alignRight="@+id/button_kilenc"
        android:layout_alignEnd="@+id/button_kilenc"
        android:id="@+id/button_egyenlo" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_kivonas"
        android:layout_alignLeft="@+id/button_osszeadas"
        android:layout_alignStart="@+id/button_osszeadas"
        android:id="@+id/button_szorzas" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_kivonas"
        android:layout_toRightOf="@+id/button_szorzas"
        android:layout_toEndOf="@+id/button_szorzas"
        android:id="@+id/button_osztas" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/button_szorzas"
        android:layout_alignLeft="@+id/button_szorzas"
        android:layout_alignStart="@+id/button_szorzas"
        android:layout_marginTop="19dp"
        android:id="@+id/editText_vegeredmeny"
        android:textAlignment="textEnd" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_ot"
        android:layout_alignBaseline="@+id/button_hat"
        android:layout_toRightOf="@+id/button_negy"
        android:layout_alignBottom="@+id/button_hat"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
